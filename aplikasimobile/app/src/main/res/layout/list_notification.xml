<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_row_selector"
    android:padding="3dp" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Judul Notifikasi"
        android:textSize="17dp"
        android:textStyle="bold"
        android:id="@+id/judulNotif"
        android:textColor="@android:color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Polisi"
        android:textSize="15dp"
        android:textStyle="bold"
        android:id="@+id/noPolisi"
        android:layout_below="@+id/judulNotif"
        android:textColor="@android:color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pesannya"
        android:textSize="15dp"
        android:id="@+id/pesanNotifikasi"
        android:layout_below="@+id/noPolisi"/>


</RelativeLayout>